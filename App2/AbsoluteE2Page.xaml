<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.AbsoluteE2Page">
    <AbsoluteLayout>
        <Image Source = "http://lorempixel.com/1920/1080/nature/7" 
               AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" Aspect="AspectFill"/>
        <Label Text="Relax" FontSize="30" TextColor="White" HorizontalTextAlignment="Center" 
               AbsoluteLayout.LayoutBounds="0,20,1,40" AbsoluteLayout.LayoutFlags="XProportional, WidthProportional" />
        <BoxView BackgroundColor="Black" Opacity="0.5" 
                 AbsoluteLayout.LayoutBounds="0,1,1,100" AbsoluteLayout.LayoutFlags="YProportional,WidthProportional" />
        <StackLayout  Padding="30" AbsoluteLayout.LayoutBounds="0,1,1,100" AbsoluteLayout.LayoutFlags="YProportional,WidthProportional" Orientation="Horizontal" VerticalOptions="Center">
            <Label TextColor="White" Text="Profile" FontSize="15" HorizontalOptions="Center"/>
            <Label TextColor="White" Text="Meditate" FontSize="15" HorizontalOptions="CenterAndExpand"/>
            <Label TextColor="White" Text="Themes" FontSize="15" HorizontalOptions="Center"/>
        </StackLayout>
    </AbsoluteLayout>
</ContentPage>